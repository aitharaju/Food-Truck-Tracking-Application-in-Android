<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#fff"
>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
		android:background="@drawable/backgroundrepeat"
	>
		<EditText
		    android:id="@+id/searchbox"
		    android:layout_height="40dp"
		    android:layout_width="fill_parent"
		   	android:textSize="14sp"
		   	android:textStyle="bold"
		   	android:textColor="#1a1515"
		   	android:layout_alignParentLeft="true"
		   	android:paddingLeft="10dp"
		   	android:layout_marginRight="80dp"
		   	android:layout_marginLeft="5dp"
		   	android:hint="Truck Name"
		   	android:layout_centerVertical="true"
		   	android:textColorHint="#716f6f"
		   	
		   	android:editable="true"
		   	android:background="@drawable/roundercorners"
		   	
		 />
		<RelativeLayout
		    android:layout_width="83dp"
		    android:layout_height="40dp"
		    android:text="Search"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="2dp"
		>

		<LinearLayout
		    android:id="@+id/searchl"
		    android:layout_width="36dp"
		    android:layout_height="40dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="2dp"
		    android:background="@drawable/roundercorners"
		    android:gravity="center"
		    android:padding="3dp" >

		<Button
		    android:id="@+id/search"
		    android:layout_width="30dp" 
		    android:layout_height="30dp"
		    android:background="@drawable/search"
		    android:onClick="searchButtonClicked"
		 
		    
		    
		 />
		</LinearLayout>
		<LinearLayout
		    android:layout_width="36dp"
		    android:layout_height="40dp"
		    android:background="@drawable/roundercorners"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp"
		    android:layout_centerVertical="true"
		    android:gravity="center"
		    android:padding="3dp"
		    
		 >
			<Button
		    android:id="@+id/map"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:background="@drawable/mapbutton"
		    android:onClick="maps"
		   
		    
		    
		 />
			</LinearLayout>
		</RelativeLayout>
	</RelativeLayout>
	
	<ListView
	
	android:id="@android:id/list"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="#fff"
	android:cacheColorHint="#fff"
	android:divider="#BFBFBF"
	android:dividerHeight="1dp"
	android:fastScrollEnabled="true"
	/>
	 
 

</LinearLayout>
